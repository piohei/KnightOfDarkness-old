# Wyrazenia regularne
[REXP]
rexp_login      = "/^[a-z0-9_]{3,20}$/i"
rexp_pass       = "/^[a-z0-9_]{5,20}$/i"
rexp_email      = "/^[^@]+@([a-z0-9_-]+\.)+[a-z]{2,4}$/i"


# elementy wazne. Prawie zawsze uzywane.
[HEAD]
meta_standard = """<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-2">
    <meta http-equiv="Content-Language" content="pl">"""
link_css_mainstyle = """<link rel="stylesheet" type="text/css" href="http://kod-online.pl/css/main_style.css">"""
